{
  "name": "api-gateway",
  "version": "1.1.0",
  "description": "REST API Gateway vers SOAP",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start:admin:dev": "cross-env ADMIN_SECRET=UnSecretSolide NODE_ENV=development node dist/server.js",
    "gen:types": "ts-node scripts/generate-openapi-types.ts",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --runInBand --ci --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "backup": "powershell -ExecutionPolicy Bypass -File ./scripts/backup/create-backup.ps1",
    "backup:sh": "bash ./scripts/backup/create-backup.sh",
    "backup:prune": "powershell -ExecutionPolicy Bypass -File ./scripts/backup/prune-backups.ps1",
    "backup:prune:sh": "bash ./scripts/backup/prune-backups.sh",
    "backup:full": "npm run backup && npm run backup:prune",
    "backup:restore": "powershell -ExecutionPolicy Bypass -File ./scripts/backup/restore-backup.ps1",
    "backup:restore:sh": "bash ./scripts/backup/restore-backup.sh"
  },
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/express": "^4.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/http-proxy": "^11.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/under-pressure": "^9.0.3",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.50.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@xmldom/xmldom": "^0.8.11",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "fast-xml-parser": "^5.2.5",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "helmet": "^8.1.0",
    "jose": "^5.10.0",
    "morgan": "^1.10.0",
    "p-limit": "^5.0.0",
    "pino": "^9.12.0",
    "prom-client": "^15.1.3",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.1",
    "xml2js": "^0.6.2",
    "xmlbuilder2": "^3.1.1",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.34",
    "yamljs": "^0.3.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.17",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/xml2js": "^0.4.14",
    "@types/xmldom": "^0.1.34",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "eslintConfigNote": "Config dans .eslintrc.cjs",
  "engines": {
    "node": ">=20 <23"
  }
}
