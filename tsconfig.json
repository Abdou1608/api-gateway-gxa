{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "module":  "CommonJS",
                            "moduleResolution":  "Node",
                            "strict":  true,
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "outDir":  "dist",
                            "types":  [
                                          "node"
                                      ],
                            "typeRoots":  [
                                              "./node_modules/@types",
                                              "./src/types"
                                          ]
                        },
    "include":  [
                    "src/**/*.ts",
                    "src/**/*.d.ts"
                ]
}
